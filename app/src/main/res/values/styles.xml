<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SmallGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_text_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--<style name="TextMediumBlack" parent="@android:style/TextAppearance">-->
    <style name="MediumBlack" parent="TextAppearance.AppCompat">
        <!--<item name="android:textColor">@color/black_text</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BigBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
